{
  "name": "teacher-assistant",
  "version": "1.0.0",
  "description": "AI-ассистент для преподавателей средней и старшей школы (5-11 классы). Планы уроков, задания, проверка работ, КТП, аналитика оценок. ФГОС ООО и СОО.",
  "author": {
    "name": "knottasoft",
    "url": "https://github.com/knottasoft"
  },
  "homepage": "https://github.com/knottasoft/teacher-assistant",
  "repository": "https://github.com/knottasoft/teacher-assistant",
  "license": "MIT",
  "keywords": [
    "teacher",
    "education",
    "school",
    "fgos",
    "lesson-plan",
    "grading",
    "mcp"
  ],
  "skills": "skills/",
  "hooks": "hooks/hooks.json",
  "mcpServers": {
    "teacher": {
      "command": "node",
      "args": ["${CLAUDE_PLUGIN_ROOT}/mcp-server/dist/index.js"],
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
